<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= category %> - Evo Games</title>
    <link rel="stylesheet" href="/css/styles.css" />
  </head>
  <body>
    <%- include('../partials/navbar.ejs') %>

    <div class="container">
      <h1>ðŸŽ® <%= category %></h1>

      <% if (items.length === 0) { %>
      <div class="no-items">
        <p>No <%= category.toLowerCase() %> items listed yet.</p>
        <a href="/items/new" class="btn btn-primary">List an Item</a>
      </div>
      <% } else { %>
      <div class="items-grid">
        <% items.forEach(item => { %>
        <a href="/items/<%= item._id %>" class="item-card">
          <% if (item.images && item.images.data) { %>
          <img
            src="data:<%= item.images.contentType %>;base64,<%= item.images.data.toString('base64') %>"
            alt="<%= item.title %>"
            class="item-image"
          />
          <% } else { %>
          <div class="item-image">ðŸŽ®</div>
          <% } %>

          <div class="item-info">
            <h3 class="item-title"><%= item.title %></h3>
            <p class="item-price">BHD <%= item.price %></p>
            <p class="item-details">Seller: <%= item.owner.username %></p>

            <div>
              <span class="badge badge-category"><%= item.category %></span>
              <span class="badge badge-condition"><%= item.condition %></span>
              <span class="badge badge-platform"><%= item.platform %></span>
            </div>
          </div>
        </a>
        <% }) %>
      </div>
      <% } %>
    </div>
  </body>
</html>
