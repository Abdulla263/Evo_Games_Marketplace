<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= item.title %> - Evo Games</title>
    <link rel="stylesheet" href="/css/styles.css" />
  </head>
  <body>
    <%- include('../partials/navbar.ejs') %>

    <div class="container">
      <div class="item-detail">
        <div>
          <% if (item.images && item.images.data) { %>
          <img
            src="data:<%= item.images.contentType %>;base64,<%= item.images.data.toString('base64') %>"
            alt="<%= item.title %>"
            class="item-image"
            style="height: 400px"
          />
          <% } else { %>
          <div class="item-image" style="height: 400px; font-size: 5rem">
            ðŸŽ®
          </div>
          <% } %>
        </div>

        <div class="item-info">
          <h1><%= item.title %></h1>
          <p class="price">BHD<%= item.price %></p>

          <div class="badges">
            <span class="badge badge-category"><%= item.category %></span>
            <span class="badge badge-condition"><%= item.condition %></span>
            <span class="badge badge-platform"><%= item.platform %></span>
          </div>

          <% if (item.desc) { %>
          <div class="description">
            <h3>Description</h3>
            <p><%= item.desc%></p>
          </div>
          <% } %>

          <div class="seller-info">
            <h3>Seller Information</h3>

            <% if (user) { %>

            <p>Username: <%= item.owner.username %></p>
            <p>Email: <%= item.owner.email %></p>
            <% } else { %>

            <p>Username: <%= item.owner.username %></p>
            <p
              style="
                color: #f39c12;
                background: #fff3cd;
                padding: 10px;
                border-radius: 5px;
                margin-top: 10px;
              "
            >
              ðŸ”’ <strong>Sign in to view contact details</strong><br />
              <a
                href="/auth/sign-in"
                style="color: #0066cc; text-decoration: underline"
                >Sign In</a
              >
              or
              <a
                href="/auth/sign-up"
                style="color: #0066cc; text-decoration: underline"
                >Sign Up</a
              >
              to contact the seller
            </p>
            <% } %>
          </div>

          <% if (user && item.owner._id.equals(user._id)) { %>
          <div class="actions">
            <a href="/items/<%= item._id %>/edit" class="btn btn-primary"
              >Edit Item</a
            >
            <form
              action="/items/<%= item._id %>?_method=DELETE"
              method="POST"
              style="display: inline"
            >
              <button
                type="submit"
                class="btn btn-danger"
                onclick="return confirm('Delete this item?')"
              >
                Delete
              </button>
            </form>
          </div>
          <% } %>
        </div>
      </div>
    </div>
  </body>
</html>
